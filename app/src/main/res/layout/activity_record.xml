<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/black"
    tools:context=".RecordActivity">

    <RadioGroup
        android:id="@+id/menu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="0dp">

        <RadioButton
            android:id="@+id/greeting1"
            android:layout_width="match_parent"
            android:layout_height="49dp"
            android:layout_weight="1"
            android:background="@drawable/select_tab"
            android:button="@null"
            android:gravity="center"
            android:text="가벼운 인사"
            android:textColor="@drawable/radio_text_color"
            android:textSize="14.5dp" />

        <RadioButton
            android:id="@+id/greeting2"
            android:layout_width="match_parent"
            android:layout_height="49dp"
            android:layout_weight="1"
            android:background="@drawable/select_tab"
            android:button="@null"
            android:gravity="center"
            android:text="보통인사"
            android:textColor="@drawable/radio_text_color"
            android:textSize="14.5dp" />

        <RadioButton
            android:id="@+id/greeting3"
            android:layout_width="match_parent"
            android:layout_height="49dp"
            android:layout_weight="1"
            android:background="@drawable/select_tab"
            android:button="@null"
            android:gravity="center"
            android:text="정중한 인사"
            android:textColor="@drawable/radio_text_color"
            android:textSize="14.5dp"

            />

    </RadioGroup>

    <FrameLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/menu" />

    <TextView
        android:id="@+id/side"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/menu"
        android:background="#33ffffff"
        android:gravity="center"
        android:padding="2dp"
        android:text="앞모습"
        android:textColor="#ffff" />

    <LinearLayout
        android:layout_marginTop="8dp"
        android:layout_marginRight="8dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@id/side"
        android:gravity="center"
        android:orientation="vertical">

        <ImageButton
            android:id="@+id/switch_camera_face"
            style="@android:style/Widget.Holo.Button.Borderless"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/icon_00"
            android:onClick="switchCamera" />

        <ImageView
            android:layout_marginTop="4dp"
            android:layout_marginBottom="4dp"
            android:src="@drawable/icon_01"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ImageButton
            android:id="@+id/switch_face"
            style="@android:style/Widget.Holo.Button.Borderless"
            android:src="@drawable/icon_02"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="switchFace"
            />

    </LinearLayout>

    <ImageButton
        style="@android:style/Widget.Holo.Button.Borderless"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:onClick="recordVideo"
        android:src="@drawable/icon_03"
        android:text="Record Video" />

</RelativeLayout>